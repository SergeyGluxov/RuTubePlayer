<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_selected="false"  android:color="@color/white">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:color="@color/black" android:width="3dp"/>
        </shape>
    </item>

    <item android:state_focused="true"  android:color="@color/white">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:color="@color/yellowDarker" android:width="3dp"/>
        </shape>
    </item>

    <item android:state_focused="false" android:state_selected="true"  android:color="@color/white">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:color="@color/yellowDarker" android:width="3dp"/>
        </shape>
    </item>
</selector>